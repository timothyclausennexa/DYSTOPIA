# DYSTOPIA: ETERNAL BATTLEGROUND - Environment Configuration
# Copy this file to .env.production and fill in your values

# Node Environment
NODE_ENV=production
PORT=3000

# Supabase Database (REQUIRED)
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key_here
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_PROJECT_REF=your-project-ref
SUPABASE_ACCESS_TOKEN=your_management_api_token_here

# Redis
REDIS_URL=redis://localhost:6379

# Discord Webhooks (optional but recommended)
DISCORD_WEBHOOK=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# Server Configuration
MAX_PLAYERS=1000
WORLD_SIZE=50000
ZONE_COUNT=100

# Security
JWT_SECRET=your_jwt_secret_here
ADMIN_PASSWORD=your_admin_password_here

# AWS S3 (optional - for backups)
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=dystopia-backups

# Monitoring (optional)
SENTRY_DSN=your_sentry_dsn
GRAFANA_API_KEY=your_grafana_key
